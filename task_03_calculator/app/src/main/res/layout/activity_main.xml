<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/output"
            style="@style/display"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/one"
            android:text="@string/_1"
            android:layout_weight="0.20"
            style="@style/button"
            >
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:text="@string/_2"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/three"
            android:text="@string/_3"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:text="@string/c"
            android:layout_weight="0.20"
            android:onClick="clear"
            style="@style/button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/four"
            android:text="@string/_4"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            android:text="@string/_5"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/six"
            android:text="@string/_6"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plus"
            android:text="@string/plus"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seven"
            android:text="@string/_7"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            android:text="@string/_8"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nine"
            android:text="@string/_9"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            android:text="@string/minus"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equals"
            android:text="@string/equals"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            android:text="@string/_zero"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            android:text="@string/divide"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:text="@string/multiply"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/percent"
            android:text="@string/percent"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inverse"
            android:text="@string/inverse"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logarithm"
            android:text="@string/ln"
            android:layout_weight="0.20"
            style="@style/button"
            android:textAllCaps="false">
        </Button>
        <Button
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/power"
            android:text="@string/power"
            android:layout_weight="0.20"
            style="@style/button">
        </Button>
    </LinearLayout>

</LinearLayout>